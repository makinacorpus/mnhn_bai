        <canvas id="glcanvas" width="0" height="0"> 
            <%= __('Your browser seems not to support the <code>&lt;canvas&gt;</code> element.') %>
        </canvas>         
        <script>
            var canvas = document.getElementById("glcanvas");
            initWebGL(canvas);        
            function initWebGL(canvas) { 
                gl = null; 
                try { 
                    // Try webgl
                    gl = canvas.getContext("webgl") || canvas.getContext("experimental-webgl"); 
                } 
                catch(e) {} 
                // If GL context cannot be found, alert user
                if (!gl)
                    alert("<%= __('Unable to initialize WebGL. Your browser may not support it.') %>"); 
            }         
        </script>